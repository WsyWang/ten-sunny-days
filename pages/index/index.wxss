/**index.wxss**/
page {
  width: 100%;
  height: 100vh;
  background: linear-gradient(167.44deg, #08244F 0%, #134CB5 47.38%, #0B42AB 100%);
  background-attachment: fixed;
}

.keepHeight {
  flex-shrink:0
}

.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: top;
  align-items: top;
}

.top {
  margin-top: 20rpx;
  height: 530rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.location {
  padding-top: 16rpx;
  color: #fff;
  display: flex;
  margin-left: 40rpx;
}

.lTitle {
  margin-left: 24rpx;
  font-weight: 600;
  font-size: 30rpx;
}

.tem {
  color: #fff;
  font-size: 100rpx;
  font-weight: 600;
  padding-left: 40rpx;
}

.title {
  color: #fff;
  font-weight: 400;
  font-size: 36rpx;
}

.infoContainer {
  width: 670rpx;
  background: rgba(0, 16, 38, 0.4);
  border-radius: 36rpx;
  height: 80rpx;
  margin-left: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.info {
  display: flex;
  flex: auto;
  padding-left: 65rpx;
}

.number {
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
  margin-left: 10rpx;
}

.hourContainer {
  margin-top: 20rpx;
  width: 670rpx;
  background: rgba(0, 16, 38, 0.4);
  border-radius: 36rpx;
  height: 369rpx;
  margin-left: 40rpx;
}

.hourTitle {
  color: #fff;
  margin-left: 32rpx;
  margin-top: 24rpx;
  font-weight: 700;
  font-size: 30rpx;
}

.hourForecast {
  width: 100%;
  height: 305rpx;
  white-space: nowrap;
}

.hourInfo {
  color: #ffffff;
  display: inline-block;
  height: 100%;
  width: 118rpx;
  padding-left: 50rpx;
  padding-top: 20rpx;
}

.hourTem {
  padding-left: 8rpx;
}

.hourInfo image {
  margin-top: 40rpx;
  padding-left: 7rpx;
}

.time {
  margin-top: 40rpx;
}

.daysForecastContainer {
  margin-top: 20rpx;
  width: 100%;
  height: 700rpx;
}

.daysForecast {
  width: 670rpx;
  background: rgba(0, 16, 38, 0.4);
  border-radius: 36rpx;
  height: 600rpx;
  margin-left: 40rpx;
} 

.daysTitle {
  color: #fff;
  padding-left: 32rpx;
  padding-top: 24rpx;
  font-weight: 700;
  font-size: 30rpx;
}

.test {
  color: #fff;
  display: flex;
  height: 80rpx;
  width: 100%;
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
}

.weekday {
  padding-left: 50rpx;
  flex: auto;
  line-height: 80rpx;
  font-weight: 700;
}

.test image {
  padding-left: 110rpx;
  flex: auto;
}

.dayMax {
  padding-left: 100rpx;
  line-height: 80rpx;
  flex: auto;
  display: flex;
}

.dayMin {
  line-height: 80rpx;
  margin-left: 20rpx;
  opacity: 0.5;
}